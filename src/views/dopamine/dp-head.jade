//- ------------------------------------------------
//- Char encoding
//- ------------------------------------------------
mixin dp_head_meta_charset(_charset)
	- _charset = _charset || 'utf-8'
	meta(charset=_charset)


//- ------------------------------------------------
//- FORCE CHROME FRAME - HTTP-EQUIV
//- ------------------------------------------------
mixin dp_head_meta_chromeframe
	meta(http-equiv='X-UA-Compatible',content='IE=edge')

//- ------------------------------------------------
//- Author - HUMANS.TXT
//- ------------------------------------------------
mixin dp_head_author
	link(type='text/plain',rel='author',href='humans.txt')

//- ------------------------------------------------
//- META - Description
//- ------------------------------------------------
mixin dp_head_meta_description(_content)
	meta(name='description',content=_content)

//- ------------------------------------------------
//- META - Keywords
//- ------------------------------------------------
mixin dp_head_meta_keywords(_csv)
	meta(name='keywords',content=_csv)

//- ------------------------------------------------
//- <TITLE>
//- ------------------------------------------------
mixin dp_head_title(_page_title, _suffix)
	title= _page_title + ' | ' + _suffix
	//- TODO: examine suffix

//- ------------------------------------------------
//- VIEWPORTS - Flexible, most common
//- ------------------------------------------------
mixin dp_head_meta_viewport()
	//- Most flexible, common choice
	meta(name='viewport',content='width=device-width, initial-scale=1.0')

	//- Force scale 1, non-resizable
